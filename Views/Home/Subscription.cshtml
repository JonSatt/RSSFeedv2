@model RSSFeedv2.Models.SubscriptionModel

@{
    ViewData["Title"] = "Add Subscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Subscription</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Subscription">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FeedURL" class="control-label"></label>
                <input asp-for="FeedURL" class="form-control" />
                <span asp-validation-for="FeedURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary add-feed-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
